        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css%22%3E">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css%22%3E">
    </head>
<body>
    <div class="mainContent">
        <div class="form">
            <div class="heading">
                Add A Topper
            </div>
            <form method="POST">
                <div class="mb-3">
                  <label for="name" class="form-label">Name</label>
                  <input type="name" class="form-control" id="name" style="width: 100%;" placeholder="Enter the topper's name" name="name" required>
                </div>
                <div class="mb-3">
                  <label for="pic" class="form-label">Picture</label>
                  <input type="name" class="form-control" id="pic" name="pic" placeholder="Enter the url for the young acheiver's pic" required>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="clas" class="form-label">Class</label>
                            <input type="name" class="form-control" id="clas" name="clas" placeholder="Enter the topper's class" required>
                          </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="section" class="form-label">Section</label>
                            <input type="name" class="form-control" id="section" name="section" placeholder="Enter the topper's section" required>
                          </div>
                    </div>
                </div>
                    <div class="mb-3">
                        <label for="marks" class="form-label">Marks</label>
                        <input type="number" class="form-control" id="marks" name="marks" placeholder="How many marks has the topper scored out of 500 ?" required>
                    </div>
                <br>


                <div class="d-grid gap-2">
                    <button class="btn btn-primary" type="submit">Add</button>
                    <button class="btn btn-danger" type="button" onclick="location.href='/edit'">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>