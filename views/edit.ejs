        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
    <script src='https://cdnjs.cloudflare.com/ajax/libs/d3/5.9.1/d3.min.js'></script>
    <style>
        .bi{
            font-size: 2vw;
        }
        table {
        border-collapse: collapse;
        border-spacing: 0;
        width: 100%;
        border: 1px solid #ddd;
        }

        @media screen and (max-width: 800px) {
            td, th{
                font-size: 3.5vw !important;
            }

            .bi{
                font-size: 5vw;
            }
            td{
                min-width: 30vw !important;
            }
        }
    </style>
</head>

<body>
    <div class="nav">
        <div class="brand">
            <a href="index.html"><img src="logo.png" alt="" class="logo"></a>
        </div>
        <div class="content">
            <a href="/"><div class="nav-item">Home</div></a>
            <a href="/toppers"><div class="nav-item acc">Achievers</div></a>
            <a href="/login"><div class="nav-item">Admin</div></a>
        </div>
    </div>
    <div class="mainContent" style="padding: 10vh 1vw 0 1vw;">

        <div class="heading">
            Edit The Topper's List
        </div>

        <br>
        <div class="text-center">
            <button class="btn btn-success" onclick="location.href='/add'">Add A Topper</button>
        </div>
        <br>
        <br>
        <% if(toppers.length){%>
        <div style="overflow-x:auto">
            <table class="table table-hover table-dark">
            <thead>
              <tr>
                <th scope="col align-middle">Name</th>
                <th scope="col align-middle">Grade</th>
                <th scope="col align-middle">Marks</th>
                <th scope="col align-middle">Delete</th>
              </tr>
            </thead>
            <tbody>
                    <% for(i=0; i<toppers.length; i++){%>
                        <tr>
                            <td class="align-middle"><%= toppers[i].name %></td>
                            <td class="align-middle"><%= toppers[i].clas %> <%= toppers[i].section %></td>
                            <td class="align-middle"><%= toppers[i].marks %></td>
                            <td class="align-middle" onclick="location.href='/delete/<%= keys[i] %>'"><i class="bi bi-trash3-fill"></i></td>
                          </tr>
                    <%};%>
            </tbody>
        </table>
        </div>
        <%}else{%>
            <div class="text-center">
                <div class="subHeading" style="font-variant:small-caps; font-family: Mouse Memoirs;">It seems that you have not added anyone yet. Add to see here</div>
            </div>
        <%}%>
    </div>
    <footer>
        <div class="footer" style="bottom: 0 ;">
            <div class="heading" style="font-size: 4vw; margin-bottom:2vh">
                Reach Out To Us
            </div>
            <div class="contact">
                <div class="email">
                    <span>Email </span>
                    <span>vanditkad@gmail.com</span>
                    <span>gsoham562@gmail.com</span>
                </div>
                <div class="discord">
                    <span>Discord</span>
                    <span>Mr_Voracious#3932</span>
                    <span>fuel000cynical#7589</span>
                </div>
            </div>
        </div>
    </footer>

</body>

</html>